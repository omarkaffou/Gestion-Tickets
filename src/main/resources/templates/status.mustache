{{>layout/header}}
<h1 class="h3 mb-2 text-gray-800">Modifier Status</h1>
<form action="/dev/status" method="POST">
  <div class="form-group">
    <label for="tickets">Incident</label>
    <select class="form-control" id="tickets" name="ticketId">
    {{#tickets}}
        <option value="{{id}}">{{description}}</option>
    {{/tickets}}
    </select>
  </div>
  <div class="form-group">
    <label for="status">Status</label>
    <select class="form-control" id="status" name="status">
    {{#status}}
        <option value="{{.}}">{{.}}</option>
    {{/status}}
    </select>
  </div>
  <input type="submit" class="btn btn-primary" value="Modifier" />
</form>
{{>layout/footer}}