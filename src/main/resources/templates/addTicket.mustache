{{>layout/header}}
<h1 class="h3 mb-2 text-gray-800">Ajouter un incident</h1>
<form name="ticket" action="/client/tickets/add" method="POST">
  <div class="form-group">
    <label for="urgence">Urgence:</label>
    <select class="form-control" id="urgence" name="urgence">
    {{#urgences}}
        <option value="{{.}}">{{.}}</option>
    {{/urgences}}
    </select>
  </div>
  <div class="form-group">
      <label for="os">Systeme d'exploitation</label>
      <input type="text" class="form-control" id="os" name="os" placeholder="Ajouter un systeme d'exploitation...">
  </div>
  <div class="form-group">
    <label for="app">Application:</label>
    <select class="form-control" id="app" name="software">
    {{#apps}}
        <option value="{{id}}">{{name}}</option>
    {{/apps}}
    </select>
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <textarea class="form-control" id="description" rows="3" name="description" placeholder="Ajouter une description..."></textarea>
  </div>
  <input type="hidden" name="clientId" value="{{id}}">
  <input type="submit" class="btn btn-primary" value="Ajouter" />
</form>
{{>layout/footer}}